<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#ff469b66"
                tools:context=".NearestStopsActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus stops"
            android:id="@+id/busStopsBtn"

            android:layout_marginTop="12dp"
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/listView"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_below="@+id/busStopsBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:divider="#ffb2bfc9"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:layout_alignParentLeft="true"
            android:background="#ff6dffad"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch to maps"
            android:id="@+id/switchToMapsStopsActivity"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/busStopsBtn"
            android:layout_alignLeft="@+id/listView"
            android:checked="false"
        android:textSize="20dp" />

</RelativeLayout>

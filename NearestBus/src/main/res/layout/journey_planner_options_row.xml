<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="#fff5f5f5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1 Take bus 200"
        android:id="@+id/headingElementTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.52pm Depart Bridgnorth St at Belmont School"
        android:id="@+id/busDepart"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/headingElementTxt"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.21pm Arrive Queen Street station"
        android:id="@+id/busArrive"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/busDepart"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel time: about 29 minutes"
        android:id="@+id/busTravelTime"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/busArrive"

        android:paddingBottom="10dp" />


</RelativeLayout>
